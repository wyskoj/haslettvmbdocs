\end_layout

\begin_layout Plain Layout

\family typewriter
BX, RF, BX, RR, FX, RF, FX
\end_layout

\end_inset


\end_layout

\begin_layout Subsection
Rockin' Multiples of 2
\end_layout

\begin_layout Standard
This drill helps performers practice Rock & Rolls by marching forwards,
 then backwards, decreasing the march distance each time.
\end_layout

\begin_layout Standard
\begin_inset VSpace defskip
\end_inset


\end_layout

\begin_layout Standard
\noindent
\begin_inset Box Frameless
